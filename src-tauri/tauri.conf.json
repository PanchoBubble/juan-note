{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Juan Note",
  "version": "0.1.0",
  "identifier": "com.juanfranciscodeluca.juan-note",
  "build": {
    "beforeDevCommand": "pnpm run mcp:build && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
    "app": {
      "windows": [
        {
          "title": "Juan Note",
          "width": 800,
          "height": 600,
          "transparent": false
        }
      ],
      "security": {
        "csp": null
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/simple_rgba_icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../mcp-server/dist/index.js",
        "../mcp-server/package.json"
      ]
    }
}

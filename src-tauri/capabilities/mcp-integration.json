{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "mcp-integration",
  "description": "Capability for MCP integration with read-only filesystem access to user config directories",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:read-files",
    "fs:read-dirs"
  ],
  "fs": {
    "scope": {
      "allow": [
        "$HOME",
        "$HOME/.config",
        "$HOME/.config/**/*"
      ],
      "deny": [
        "$HOME/.ssh",
        "$HOME/.aws",
        "$HOME/.gnupg",
        "$HOME/Documents",
        "$HOME/Desktop",
        "$HOME/Downloads"
      ]
    }
  }
}